<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.tao.project.secondary.UserMapperSecondary">
    <select id="findByUsername" resultType="com.tao.project.secondary.UserSecondary">
        SELECT * FROM USER WHERE username = #{username}
    </select>

    <insert id="insert">
        INSERT INTO USER(username, age) VALUES(#{username}, #{age})
    </insert>

    <delete id="deleteAll">
        delete from user;
    </delete>
</mapper>